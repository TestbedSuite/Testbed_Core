<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Core brushes -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#111318"/>
    <SolidColorBrush x:Key="CardBrush"    Color="#1C1F26"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#1E88E5"/>
    <SolidColorBrush x:Key="AccentBrush"  Color="#64B5F6"/>
    <SolidColorBrush x:Key="TextBrush"    Color="#E6E6E6"/>
    <SolidColorBrush x:Key="MutedText"    Color="#A9B0B6"/>

    <!-- Common control styles -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="#20242C"/>
        <Setter Property="BorderBrush" Value="#2B313C"/>
    </Style>

    <!-- ONE implicit style for TabControl (with required PART_SelectedContentHost) -->
    

</ResourceDictionary>

